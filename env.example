DATABASE_URL="postgresql://postgres:postgres@localhost:5432/reflectus"
AUTH_SECRET="replace-with-strong-secret"

# IMPORTANT: AUTH_SECRET must be a strong, random string (minimum 32 characters).
# Generate a secure secret with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 
# This secret is used for:
#   - JWT token signing/verification
#   - HMAC lookups for participant codes
#   - Session cookie encryption
#
# Never commit the actual .env file with real secrets to version control.
